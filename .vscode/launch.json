{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django 伺服器",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/drf_tutorial/manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}/drf_tutorial",
            "env": {
                "DJANGO_SETTINGS_MODULE": "drf_tutorial.settings"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}